<% flash.each do |type, message| %>
  <% bootstrap_type = case type.to_sym
      when :notice then "bg-primary text-white"
      when :alert then "bg-danger text-white"
      when :success then "bg-success text-white"
      when :error then "bg-danger text-white"
      else "bg-secondary text-white"
    end
  %>

  <div class="toast <%= bootstrap_type %>" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="4000">
    <div class="d-flex">
      <div class="toast-body">
        <%= message %>
      </div>
      <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
  </div>
<% end %>
