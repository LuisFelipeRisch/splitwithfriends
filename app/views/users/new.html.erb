<div class="d-flex justify-content-center align-items-center px-5 py-3">
  <div class="w-100" style="max-width: 420px;">
    <div class="p-4 shadow-sm rounded bg-white d-flex flex-column gap-3">
      <h2 class="m-0 fw-bold">Criar Conta</h2>

      <p class="m-0">Junte-se Ã  SplitWithFriends para gerenciar facilmente despesas de um grupo de amigos</p>

      <%= form_with model: @user, 
                    html: {
                      class: 'd-flex flex-column gap-3'
                    } do |form| %>

        <%= bs_form_field(form:, 
                          field: :first_name, 
                          label: 'Nome', 
                          as: :search_field, 
                          icon: content_tag(:i, "", class: "fa-solid fa-user")) %>
        <%= bs_form_field(form:, 
                          field: :last_name, 
                          label: 'Sobrenome', 
                          as: :search_field, 
                          icon: content_tag(:i, "", class: "fa-solid fa-user")) %>
        <%= bs_form_field(form:, 
                          field: :email_address, 
                          label: 'E-mail', 
                          as: :email_field,
                          icon: content_tag(:i, "", class: "fa-solid fa-envelope")) %>
        <%= bs_form_field(form:, 
                          field: :password, 
                          label: 'Senha', 
                          as: :password_field, 
                          icon: content_tag(:i, "", class: "fa-solid fa-lock")) %>
        <%= bs_form_field(form:, 
                          field: :password_confirmation, 
                          label: 'Confirme sua senha', 
                          as: :password_field, 
                          icon: content_tag(:i, "", class: "fa-solid fa-lock")) %>

        <div>
          <%= form.submit 'Registrar', class: 'btn btn-primary w-100' %>
        </div>

        <div>
          <%= link_to new_session_path, 
                      class: 'btn btn-secondary w-100' do %>
              Entrar
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
