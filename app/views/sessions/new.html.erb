<div class="d-flex justify-content-center align-items-center px-5 py-3">
  <div class="w-100" style="max-width: 420px;">
    <div class="p-4 shadow-sm rounded bg-white d-flex flex-column gap-3">
      <h2 class="m-0 fw-bold">Entrar na Conta</h2>
      <%= form_with url: session_path, 
                    html: {
                      class: 'd-flex flex-column gap-3'
                    } do |form| %>

        <%= bs_form_field(form:, 
                          field: :email_address, 
                          label: 'E-mail', 
                          as: :email_field,
                          icon: content_tag(:i, "", class: "fa-solid fa-envelope"), 
                          value: @email_address) %>
        <%= bs_form_field(form:, 
                          field: :password, 
                          label: 'Senha', 
                          as: :password_field, 
                          icon: content_tag(:i, "", class: "fa-solid fa-lock")) %>
        <div>
          <%= form.submit 'Entrar', class: 'btn btn-primary w-100' %>
        </div>

        <div>
          <%= link_to new_user_path, 
                      class: 'btn btn-secondary w-100' do %>
              Registrar
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
